<Page x:Class="Automedon.Mercedes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Automedon"
      mc:Ignorable="d" 
       d:DesignHeight="340" d:DesignWidth="675"
      Title="Mersedes-Benz" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="335"/>
            <ColumnDefinition Width="135"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="listBox"  Height="139" Margin="1,182,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="button1" Content="Нажмите для вывода списка" Background="#FFBB9696" HorizontalAlignment="Left" Margin="77,126,0,0" VerticalAlignment="Top" Width="203" Click="button1_Click" Grid.Column="1" Height="37"/>
        <Label x:Name="label" Content="Mersedes-Benz" Margin="21,44,0,0" VerticalAlignment="Top"  FontSize="40" Grid.Column="1"/>
        <Image Source="mercedes.jpg" Grid.Column="2" Margin="28,0,-67,204"/>
    </Grid>
</Page>
